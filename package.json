{
	"name": "@omnysecurity/vite-plugin-wasm-ssr",
	"version": "1.0.1",
	"type": "module",
	"license": "MIT",
	"description": "SSR ready vite plugin for ESM integration of wasm-pack generated packages",
	"homepage": "https://github.com/omnysecurity/vite-plugin-wasm-ssr",
	"repository": {
		"type": "git",
		"url": "https://github.com/omnysecurity/vite-plugin-wasm-ssr.git"
	},
	"packageManager": "pnpm@7.18.2",
	"keywords": [
		"vite",
		"plugin",
		"vite-plugin",
		"wasm",
		"webassembly",
		"wasm-pack",
		"es-modules",
		"modules"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"CHANGELOG.md",
		"dist/"
	],
	"scripts": {
		"dev": "tsup src/index.ts --format esm --dts --watch",
		"build": "tsup src/index.ts --format esm --dts",
		"lint": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. .",
		"release": "pnpm build && changeset publish"
	},
	"peerDependencies": {
		"vite": "3.x || 4.x"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@types/node": "^18.11.17",
		"prettier": "^2.8.1",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.2"
	}
}
